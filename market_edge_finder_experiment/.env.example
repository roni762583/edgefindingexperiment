# Market Edge Finder - Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# OANDA API Configuration (Required)
# ================================
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_ENVIRONMENT=practice  # 'practice' or 'live'

# ================================
# System Configuration
# ================================
ENVIRONMENT=development  # development, staging, production
DEVICE=auto  # auto, cpu, cuda, mps
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
USE_CUDA=false  # true for GPU acceleration

# ================================
# Data Configuration
# ================================
DATA_PATH=./data
MODELS_PATH=./models
LOGS_PATH=./logs
RESULTS_PATH=./results

# Historical data download settings
DOWNLOAD_DAYS=1095  # 3 years of data
DOWNLOAD_GRANULARITY=H1  # H1, M15, M5, M1
DOWNLOAD_INSTRUMENTS=all  # 'all' or comma-separated list

# ================================
# Training Configuration
# ================================
TRAINING_BATCH_SIZE=64
TRAINING_EPOCHS=100
LEARNING_RATE=0.001
VALIDATION_SPLIT=0.2

# ================================
# Performance Optimization
# ================================
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4
OPENBLAS_NUM_THREADS=4
WORKERS=4  # Number of parallel workers

# ================================
# Database Configuration (Optional)
# ================================
DB_NAME=edge_finder
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# ================================
# Monitoring Configuration (Optional)
# ================================
GRAFANA_PASSWORD=admin
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ================================
# Docker Configuration
# ================================
COMPOSE_PROJECT_NAME=edge-finder
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# GPU configuration for Docker
CUDA_VISIBLE_DEVICES=0  # GPU device IDs

# ================================
# API Rate Limiting
# ================================
OANDA_REQUESTS_PER_SECOND=10
OANDA_REQUESTS_PER_MINUTE=600
OANDA_MAX_RETRIES=3
OANDA_TIMEOUT=30

# ================================
# Development Configuration
# ================================
JUPYTER_PORT=8888
JUPYTER_TOKEN=your_jupyter_token_here
DEBUG_MODE=false

# ================================
# Production Configuration
# ================================
MAX_MEMORY_GB=8
WORKER_TIMEOUT=3600
RESTART_POLICY=unless-stopped

# ================================
# Cache Configuration
# ================================
CACHE_DIR=${HOME}/.cache
PIP_CACHE_DIR=${HOME}/.cache/pip
TORCH_CACHE_DIR=${HOME}/.cache/torch
NUMBA_CACHE_DIR=${HOME}/.cache/numba